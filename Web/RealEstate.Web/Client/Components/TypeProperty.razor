<div class="col-lg-3 col-sm-6 wow fadeInUp" data-wow-delay="0.1s" >
    <a class="cat-item d-block bg-light text-center  rounded p-3" href="/search-by-type/@Type" style="text-decoration: none">
        <div class="rounded p-4">
            <div class="icon mb-3">
                <img class="img-fluid" src=@ImgUrl alt="Icon">
            </div>
            <h6 style="color:#00B98E">@Type</h6>
            <span style="color:#00B98E">@Count Имота</span>
        </div>
    </a>
</div>
@code {

    [Parameter]
    public string? Type { get; set; }
    [Parameter]
    public string? ImgUrl { get; set; }
    [Parameter]
    public int Count { get; set; }
    private void Find() {
        this.NavigationManager.NavigateTo($"search-by-type/{Type}");
    }
}